<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanetsApp.View.OurPlanetsPage">
    <ListView x:Name="MyListView"
            ItemsSource="{Binding AllPlanets}"
            ItemTapped="Handle_ItemTapped"
            CachingStrategy="RecycleElement">


        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout>
                        <Label Text="{Binding Name}" TextColor="Red"/>
                        <Label Text="{Binding SolarSystemPosition}" TextColor="Red"/>
                        <Label Text="{Binding AverageTemperature}" TextColor="Red"/>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
